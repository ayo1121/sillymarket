modules = ["nodejs-20", "rust-stable", "web", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["pkg-config", "libusb1", "solana-cli", "openssl", "libudev-zero"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Next.js Dev Server"

[[workflows.workflow]]
name = "Next.js Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontends/yesno-ui && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd frontends/yesno-ui && npm run start"]
build = ["bash", "-c", "cd frontends/yesno-ui && npm run build"]
